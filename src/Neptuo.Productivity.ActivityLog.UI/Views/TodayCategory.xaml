<Window x:Class="Neptuo.Productivity.ActivityLog.Views.TodayCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:dd="clr-namespace:Neptuo.Productivity.ActivityLog.Views.DesignData"
        xmlns:converters="clr-namespace:Neptuo.Productivity.ActivityLog.Views.Converters"
        xmlns:ui="clr-namespace:Neptuo.Productivity.ActivityLog.Views.Controls"
        mc:Ignorable="d" d:DataContext="{x:Static dd:ViewModelLocator.TodayCategory}"
        Title="ActivityLog :: Today Overview" Icon="{StaticResource MainImage}" SizeToContent="WidthAndHeight" MinWidth="400" MinHeight="400"
        ResizeMode="CanMinimize" WindowStyle="None" Background="{StaticResource BackgroundBrush}"
        PreviewMouseDown="OnPreviewMouseDown" PreviewKeyDown="OnPreviewKeyDown" 
        Left="{ui:Settings TodayCategoryWindowLeft, IsTwoWayMode=True}" Top="{ui:Settings TodayCategoryWindowTop, IsTwoWayMode=True}">
    <Border Style="{StaticResource WindowBorderStyle}" Padding="0">
        <Grid Margin="8">
            <ui:PieChart ItemsSource="{Binding Activities}" Margin="10" Thickness="30" ValuePath="DurationRaw" ForegroundPath="ColorBrush" />
        </Grid>
    </Border>
</Window>
